{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "allowJs": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@addon/*": [
        "src/addon/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@renderer/*": [
        "src/renderer/*"
      ],
      "@worker/*": [
        "src/worker/*"
      ],
      "@static/*": [
        "src/static/*"
      ],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/worker/worker.log.js"
  ],
  "exclude": [
    "node_modules"
  ]
}